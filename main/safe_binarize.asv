

% This 
function binarized_image = safe_binarize(image)
    [~,~,numberOfColorChannels] = size(image);
    if numberOfColorChannels > 1
        binarized_image = rgb2gray(image);
    else 
        binarized_image = image;
    end
end

image = imread('binarized_check_no_edge.png');
imshow(safe_binarize(image));
